{
  "name": "todo-list",
  "private": true,
  "version": "1.4.3",
  "type": "module",
  "keywords": [
    "todo list",
    "projects",
    "todo"
  ],
  "description": "A Complex Todo List with Projects",
  "repository": "github:eldarlrd/todo-list",
  "homepage": "https://eldarlrd.is-a.dev/todo-list",
  "author": "Eldar Pashazade <eldarlrd@pm.me> (https://eldarlrd.is-a.dev)",
  "license": "AGPL-3.0-only",
  "scripts": {
    "dev": "vite",
    "bundle": "tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "cover": "vitest run --coverage",
    "deployer": "pnpm bundle && gh-pages -b prod -m 'build(prod): deployment' -d dist",
    "lint": "eslint src __tests__",
    "pretty": "prettier '{src,__{tests,mocks,snapshots}__}/**/*.{ts,tsx}' --write",
    "format": "pnpm lint --fix && pnpm pretty",
    "cut": "knip --fix --cache"
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "bracketSameLine": true,
    "trailingComma": "none",
    "arrowParens": "avoid",
    "experimentalTernaries": true,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@reduxjs/toolkit": "^2.9.1",
    "@twind/core": "^1.1.3",
    "@twind/preset-autoprefix": "^1.0.7",
    "@twind/preset-tailwind": "^1.1.4",
    "@twind/with-react": "^1.1.3",
    "date-fns": "^4.1.0",
    "firebase": "^12.4.0",
    "focus-trap": "^7.6.5",
    "lucide-preact": "^0.546.0",
    "nanoid": "^5.1.6",
    "preact": "^10.27.2",
    "react": "npm:@preact/compat@^18.3.1",
    "react-dom": "npm:@preact/compat@^18.3.1",
    "react-redux": "^9.2.0",
    "use-debounce": "^10.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/plugin-transform-react-jsx": "^7.27.1",
    "@eslint/js": "^9.38.0",
    "@preact/preset-vite": "^2.10.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/preact": "^3.2.4",
    "@types/eslint-plugin-jsx-a11y": "^6.10.1",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.11",
    "eslint": "^9.38.0",
    "eslint-config-preact": "^2.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-vitest": "^0.5.4",
    "gh-pages": "^6.3.0",
    "globals": "^16.4.0",
    "happy-dom": "^20.0.7",
    "knip": "^5.66.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "vite": "^7.1.11",
    "vite-plugin-pwa": "^1.1.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "workbox-core": "^7.3.0",
    "workbox-precaching": "^7.3.0"
  }
}
