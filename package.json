{
  "name": "todo-list",
  "private": true,
  "version": "1.2.2",
  "type": "module",
  "keywords": [
    "todo list",
    "projects",
    "todo"
  ],
  "description": "A Complex Todo List with Projects",
  "repository": "github:eldarlrd/todo-list",
  "homepage": "https://eldarlrd.github.io/todo-list",
  "author": "Eldar Pashazade <eldarlrd@pm.me> (https://eldarlrd.github.io)",
  "license": "AGPL-3.0-only",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "deploy": "pnpm build && gh-pages -b deploy -m 'build: Deployment' -d dist",
    "lint": "eslint src __tests__ --ext .ts,.tsx --report-unused-disable-directives",
    "pretty": "prettier '{src,__{tests,mocks,snapshots}__}/**/*.{ts,tsx}' --write",
    "format": "pnpm lint --fix && pnpm pretty"
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true,
    "bracketSameLine": true,
    "trailingComma": "none",
    "arrowParens": "avoid",
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "dependencies": {
    "@dnd-kit/core": "^6.0.8",
    "@dnd-kit/modifiers": "^6.0.1",
    "@dnd-kit/sortable": "^7.0.2",
    "@dnd-kit/utilities": "^3.2.1",
    "@reduxjs/toolkit": "^1.9.7",
    "@twind/core": "^1.1.3",
    "@twind/preset-autoprefix": "^1.0.7",
    "@twind/preset-tailwind": "^1.1.4",
    "@twind/with-react": "^1.1.3",
    "date-fns": "^2.30.0",
    "focus-trap": "^7.5.4",
    "lucide-preact": "^0.291.0",
    "nanoid": "^5.0.2",
    "preact": "^10.18.1",
    "react": "npm:@preact/compat",
    "react-dom": "npm:@preact/compat",
    "react-redux": "^8.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/plugin-transform-react-jsx": "^7.22.15",
    "@preact/preset-vite": "^2.6.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/preact": "^3.2.3",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.52.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-no-relative-import-paths": "^1.5.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vitest": "^0.3.8",
    "gh-pages": "^6.0.0",
    "happy-dom": "^12.10.3",
    "immer": "^9.0.21",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  }
}
